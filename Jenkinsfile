        stage('Build') {
            steps {
                echo 'Building...'
                // Burada build komutlarını çalıştırabilirsiniz.
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                // Test komutlarını çalıştırabilirsiniz.
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Deploy işlemlerini yapabilirsiniz.
            }
        }
    }
}